//typing text animation style for tron & war games

p{
  white-space: nowrap;
  overflow: hidden;
  animation: type 4s steps(60, end); 
}

@keyframes type{ 
  from { width: 0; } 
} 

p:nth-child(2){
  animation: type2 8s steps(60, end);
}

@keyframes type2{
  0%{width: 0;}
  50%{width: 0;}
  100%{ width: 100; } 
} 


